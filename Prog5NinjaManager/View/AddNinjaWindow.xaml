<Window x:Class="Prog5NinjaManager.View.AddNinjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog5NinjaManager.View"
        mc:Ignorable="d"
         DataContext="{Binding AddNinja, Source={StaticResource Locator}}"
        Title="AddNinjaWindow" Height="200" Width="200">
    <StackPanel>
        <TextBlock Text="Name" Margin="5,5,0,0"/>
        <TextBox MaxLength="10"  Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Gold" Margin="5,5,0,0"/>
        <TextBox MaxLength="10" Text="{Binding GoldString, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Add" Command="{Binding AddNinjaCommand}"
                    Width="100"  HorizontalAlignment="Left" Margin="0,5,0,0" />

    </StackPanel>
</Window>
